/* ANIMATIONS */

/*Animation to unblur something*/
  @-webkit-keyframes unblur {
    from {-webkit-filter: blur(50px);
          -moz-filter: blur(50px);
          -o-filter: blur(50px);
          -ms-filter: blur(50px);
          filter: blur(50px); }
    to   {-webkit-filter: blur(0px);
          -moz-filter: blur(0px);
          -o-filter: blur(0px);
          -ms-filter: blur(0px);
          filter: blur(0px); }
  }
/*Animation for the harvest panel to go down*/
  @-webkit-keyframes rollDown {
    from {position: relative;
          top: -30px;
    }
    to   {position: relative;
          top: 0px;
    }
  }


